<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:entityViewModels="clr-namespace:OneSmallStep.EntityViewModels">

	<DataTemplate DataType="{x:Type entityViewModels:PlanetViewModel}">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			
			<TextBlock Grid.Column="0" Text="Population:" />
			<TextBlock Grid.Column="1" Text="{Binding Population}" />
		</Grid>
	</DataTemplate>

</ResourceDictionary>