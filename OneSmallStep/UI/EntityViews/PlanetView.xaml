<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:entityViewModels="clr-namespace:OneSmallStep.UI.EntityViewModels">

	<DataTemplate DataType="{x:Type entityViewModels:PlanetViewModel}">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			
			<TextBlock Grid.Row="0" Grid.Column="0" Text="Population:" />
			<TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Population}" />

			<TextBlock Grid.Row="1" Grid.Column="0" Text="Position:" />
			<TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding PositionString}" />
		</Grid>
	</DataTemplate>

</ResourceDictionary>